<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/id_textField"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/grey_200"
        android:hint="Id (do not need to enter unless edit)" />


    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/grey_200"
        android:text="Please select pain intensity level"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>


    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/grey_200"
        android:entries="@array/numeric_rating_scale"
        android:spinnerMode="dropdown"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/grey_200"
        android:labelFor="@id/spinner2"
        android:text="Please select pain location"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="10dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/grey_200"
        android:entries="@array/pain_location"
        android:spinnerMode="dropdown"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/grey_200"
        android:labelFor="@id/mood"
        android:spinnerMode="dropdown"
        android:text="Please select your mood"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="10dp" />

    <com.hsalf.smileyrating.SmileyRating
        android:id="@+id/mood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textView_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_200"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:text="Please enter your steps taken today/steps goal"/>

    <EditText
        android:id="@+id/editTextSteps"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/grey_200"
        android:inputType="textPersonName"
        android:text="5000/10000"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit" />

    <TextView
        android:id="@+id/textView_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

</LinearLayout>